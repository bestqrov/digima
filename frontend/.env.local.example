# ArwaPark Frontend Environment Variables
# Copy this file to .env.local and fill in your values

# API Configuration
NEXT_PUBLIC_API_URL=https://arwapark.digima.cloud/api
NEXT_PUBLIC_API_TIMEOUT=30000

# App Configuration
NEXT_PUBLIC_APP_NAME="ArwaPark SaaS"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_APP_DESCRIPTION="Multi-tenant tourist transport platform"

# URL Configuration
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Features Flags (optional)
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=false

# Cookie Configuration
NEXT_PUBLIC_COOKIE_PREFIX=arwapark_
NEXT_PUBLIC_SESSION_TIMEOUT=7200000

# UI Configuration  
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=10
NEXT_PUBLIC_MAX_FILE_SIZE=5242880
NEXT_PUBLIC_SUPPORTED_IMAGE_FORMATS=jpg,jpeg,png,gif,webp

# Development Configuration
NEXT_PUBLIC_DEV_MODE=true
NEXT_PUBLIC_LOG_LEVEL=info

# Optional: Analytics & Monitoring
# NEXT_PUBLIC_GA_TRACKING_ID=
# NEXT_PUBLIC_SENTRY_DSN=